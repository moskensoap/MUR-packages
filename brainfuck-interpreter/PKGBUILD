# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur__brainfuck-interpreter"
pkgver=0.1
pkgrel=1
pkgdesc='A Brainfuck interpreter with automatic memory expansion, multi-file input, and interactive mode for reading code from standard input.'
arch=('x86_64')
url='https://github.com/moskensoap/brainfuck-interpreter'
license=('MIT')
makedepends=("make"
             "gcc")

source=("$url/archive/refs/tags/$pkgver.zip")
sha256sums=('3fe34b9b065fbb18b92b62ef463c9af69d8ded798eed14edad0f9bfb778d03d2')


build() {
  cd ${srcdir}
  cd brainfuck-interpreter-$pkgver
  make
}

package() {
  cd ${srcdir}
  cd brainfuck-interpreter-$pkgver
  install -Dm755 bf.exe ${pkgdir}/usr/local/bin/bf.exe
  install -Dm644 LICENSE ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE
}
