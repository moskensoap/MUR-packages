# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur__brainfuck"
pkgver=3.1
pkgrel=1
pkgdesc='Brainfuck interpreter and compiler written in C. Brainfuck generator and Ook! translator written in Brainfuck.'
arch=('x86_64')
url='https://github.com/moskensoap/brainfuck'
license=('MIT' 'apache' 'CCBYSA')
makedepends=("make"
             "gcc")
depends=('gcc'
         'mur__optfirst')

source=("$url/archive/refs/tags/$pkgver.zip")
sha256sums=('954088fabaee6fb95cb3554165494150fa816d6243a60a13b039fe2dcb28832a')

prepare() {
  cd ${srcdir}
  cd brainfuck-$pkgver
  sed -i 's/char cc_command\[25 + strlen(argv\[i\])\];/char cc_command\[34 + strlen(argv\[i\])\];/g' brainfuck-compiler.c
  sed -i 's/cc -x c/usrfirst cc -x c/g' brainfuck-compiler.c
}

build() {
  cd ${srcdir}
  cd brainfuck-$pkgver
  make
  make others
  find examples-from-others -name '*.exe' -exec rm {} +
}

package() {
  cd ${srcdir}
  cd brainfuck-$pkgver
  mkdir -p ${pkgdir}/usr/local/bin/
  install -Dm755 *.exe ${pkgdir}/usr/local/bin/
  install -Dm644 LICENSE ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE
  install -Dm644 LICENSE.bf ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE.bf
  install -Dm644 LICENSE.ook ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE.ook
  
  mkdir -p ${pkgdir}/usr/local/share/$pkgname/
  cp -r examples-from-others/* ${pkgdir}/usr/local/share/$pkgname/

  cp tbf.bf ${pkgdir}/usr/local/share/$pkgname/tbf.bf
  cp bf2ook.bf ${pkgdir}/usr/local/share/$pkgname/bf2ook.bf
  cp ook2bf.bf ${pkgdir}/usr/local/share/$pkgname/ook2bf.bf

  cp bf.html ${pkgdir}/usr/local/share/$pkgname/bf.html
  cp ook.html ${pkgdir}/usr/local/share/$pkgname/ook.html
}
