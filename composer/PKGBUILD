# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname=("mur__composer")
pkgver=2.7.7
pkgrel=3
pkgdesc="Dependency Manager for PHP"

arch=('x86_64')
url='https://getcomposer.org'
license=(MIT)
makedepends=("gcc")
depends=("mur__php"
         "mur__php-extension-composer")

source=("$url/download/$pkgver/composer.phar"
        "composer.c")

sha256sums=('aab940cd53d285a54c50465820a2080fcb7182a4ba1e5f795abfb10414a4b4be'
            'efe048222f95273af5c3def8c6045db592b9cbd1822f90ac5d6f6e6b95827547')


build() {
  cd ${srcdir}
  gcc -o composer.exe composer.c -O3 -s
}

package() {
  cd ${srcdir}
  install -Dm755 composer.exe ${pkgdir}/opt/bin/composer.exe
  cp composer.phar ${pkgdir}/opt/bin/composer.phar
}
