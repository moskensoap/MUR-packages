# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname=("composer")
pkgver=2.7.7
pkgrel=1
pkgdesc="Dependency Manager for PHP"

arch=('any')
url='https://getcomposer.org'
license=(MIT)
makedepends=("gcc")
depends=("php"
         "php-extension-composer")

source=("$url/download/$pkgver/composer.phar"
        "composer.c")

sha256sums=('aab940cd53d285a54c50465820a2080fcb7182a4ba1e5f795abfb10414a4b4be'
            'e4edc92a64e6f08dc3930249f4c3028d0292d303b6493c1fed2dc02daa16ff5c')


build() {
  cd ${srcdir}
  gcc -o composer.exe composer.c
}

package() {
  cd ${srcdir}
  install -Dm755 composer.exe ${pkgdir}/usr/bin/composer.exe
  cp composer.phar ${pkgdir}/usr/bin/composer.phar
}
