# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname=("mur__composerlts")
pkgver=2.2.24
pkgrel=2
pkgdesc="Dependency Manager for PHP (LTS)"

arch=('x86_64')
url='https://getcomposer.org'
license=(MIT)
makedepends=("gcc")
depends=("mur__php"
         "mur__php-extension-composer")

source=("$url/download/$pkgver/composer.phar"
        "composerlts.c")

sha256sums=('b0c383b1f430a80a74c006f20199d1e0226848a0a90afa5c0a7d01fb90ee9075'
            'c6ddcf93938af360d2fcbab84781848bfe7a2ed22888f0415556f1219f8e44b6')


build() {
  cd ${srcdir}
  gcc -o composerlts.exe composerlts.c -O3 -s
}

package() {
  cd ${srcdir}
  install -Dm755 composerlts.exe ${pkgdir}/opt/bin/composerlts.exe
  cp composer.phar ${pkgdir}/opt/bin/composerlts.phar
}
