# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur__gradlelink"
pkgver=1.0
pkgrel=1
pkgdesc='Creat /usr/bin/gradle.exe linking to /usr/share/java/gradle/bin/gradle'
arch=('x86_64')
url='https://github.com/moskensoap/MUR-packages'
license=(MIT)
makedepends=("gcc")
depends=("gradle")
source=("main.c"
        "LICENSE")
sha256sums=('be638c8cccbbe7f2ef4c4a69a010e42ce206733d1afe6361a331d0d9544a05f2'
            'ae1ac950060baad6e25e65f23e92bad0e0cb9e8de258cafcec5d25cba861af4a')

build() {
  cd ${srcdir}
  gcc main.c -o gradle.exe -O3 -s
}

package() {
  cd ${srcdir}
  install -Dm755 gradle.exe ${pkgdir}/usr/bin/gradle.exe
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}