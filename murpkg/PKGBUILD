# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur__murpkg"
pkgver=0.4.3
pkgrel=1
pkgdesc='MUR-package manager'
arch=('x86_64')
url='https://github.com/moskensoap/murpkg'
license=(MIT)
makedepends=("gcc"
             "make")

source=("$url/archive/refs/tags/$pkgver.zip")
sha256sums=('30136c76f76e5a116c2e287cd63ffdff1e33f3db070e8d44aaacefbb2b4595f4')

build() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make
}

package() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE

}