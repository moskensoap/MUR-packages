# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur__murpkg"
pkgver=0.6.1
pkgrel=1
pkgdesc='MUR-package manager'
arch=('x86_64')
url='https://github.com/moskensoap/murpkg'
license=(MIT)
makedepends=("gcc"
             "make")

source=("$url/archive/refs/tags/$pkgver.zip")
sha256sums=('9b29b59969fa7d247a587f285175027baed91788e317f9a2b2f0e9011d15590c')

build() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make
}

package() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE

}