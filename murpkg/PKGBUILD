# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur__murpkg"
pkgver=0.5.0
pkgrel=1
pkgdesc='MUR-package manager'
arch=('x86_64')
url='https://github.com/moskensoap/murpkg'
license=(MIT)
makedepends=("gcc"
             "make")

source=("$url/archive/refs/tags/$pkgver.zip")
sha256sums=('0b21707fcb85e251a50411df1c4105167d23a8069fd327bf4113a3ea9ecb2c48')

build() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make
}

package() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE

}