# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur__murpkg"
pkgver=0.4.2
pkgrel=1
pkgdesc='MUR-package manager'
arch=('x86_64')
url='https://github.com/moskensoap/murpkg'
license=(MIT)
makedepends=("gcc"
             "make")

source=("$url/archive/refs/tags/$pkgver.zip")
sha256sums=('ae99001da64cf09821e8f61b38a5e06967c2a7eeab417670de9403d5f2ff7db1')

build() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make
}

package() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE

}