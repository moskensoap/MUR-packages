# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur__murpkg"
pkgver=0.6.4
pkgrel=1
pkgdesc='MUR-package manager'
arch=('x86_64')
url='https://github.com/moskensoap/murpkg'
license=(MIT)
makedepends=("gcc"
             "make")
depends=("base-devel")

source=("$url/archive/refs/tags/$pkgver.zip")
sha256sums=('4a14274c9f31520b415e500d03cc87a67a469bde577db67884420305b8b089f2')

build() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make
}

package() {
  cd ${srcdir}
  cd murpkg-${pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE ${pkgdir}/usr/local/share/licenses/${pkgname}/LICENSE

}