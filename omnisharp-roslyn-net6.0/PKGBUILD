# Maintainer: moskensoap <141073988+moskensoap@users.noreply.github.com>

pkgname="mur-omnisharp-roslyn-net6.0"
pkgver=1.39.11
pkgrel=1
pkgdesc='OmniSharp server (HTTP, STDIO) based on Roslyn workspaces (net6.0)'
arch=('any')
url='https://github.com/omnisharp/omnisharp-roslyn'
license=(MIT)
makedepends=("gcc"
             "unzip")
conflicts=("mur-omnisharp-roslyn")

source=("$url/releases/download/v$pkgver/omnisharp-win-x64-net6.0.zip"
        "OmniSharp.c")
noextract=("omnisharp-win-x64-net6.0.zip")
sha256sums=('a71fd29e6cacdf41fd44acb9f8532be33dbd4cb313513e47a031443f648bdbab'
            '6409ce3984e5f428de127c63691e77cbedbca8d4ef174cb2bb9babcc13990bca')

prepare() {
  cd ${srcdir}
  unzip omnisharp-win-x64-net6.0.zip -d omnisharp-win-x64-net6.0
}

build() {
  cd ${srcdir}
  gcc -o omnisharp.exe omnisharp.c
}

package() {
  cd ${srcdir}
  install -Dm755 omnisharp.exe ${pkgdir}/opt/bin/omnisharp.exe
  mkdir -p ${pkgdir}/opt/share/${pkgname}
  cp -a omnisharp-win-x64-net6.0/* ${pkgdir}/opt/share/${pkgname}/
}
