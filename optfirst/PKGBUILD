pkgname="mur__optfirst"
pkgver=1.0
pkgrel=1
pkgdesc='locally sets PATH to /opt/bin:$PATH and runs <command> with the provided arguments.'
arch=('any')
url='https://github.com/moskensoap/MUR-packages'
license=(MIT)
makedepends=("gcc"
             "make")

source=("makefile"
        "clang32first.c"
        "clang64first.c"
        "clangarm64first.c"
        "mingw32first.c"
        "mingw64first.c"
        "optfirst.c"
        "ucrt64first.c"
        "usrfirst.c"
        "usrlocalfirst.c"
        "LICENSE")
