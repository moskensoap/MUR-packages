pkgname=("mur-xdebug")
pkgver=3.3.2
phpver=8.2
pkgrel=1
pkgdesc="Xdebug â€” Step Debugger and Debugging Aid for PHP"

arch=('any')
url='https://xdebug.org'
license=(The Xdebug License)

depends=("mur-php")

source=("$url/files/php_xdebug-${pkgver}-${phpver}-vs16-x86_64.dll"
        "xdebug.ini")

sha256sums=('006a27837960b5e4a1351e56091efbb17bc531197e9c01684cab085364731ae5'
            '307d6706c5177d90acde61e0d6ca6862c51144420db980430730bf2ed6198402')


package() {
  cd ${srcdir}
  mkdir -p ${pkgdir}/opt/share/mur-php/ext
  cp php_xdebug-${pkgver}-${phpver}-vs16-x86_64.dll ${pkgdir}/opt/share/mur-php/ext/php_xdebug.dll
  mkdir -p ${pkgdir}/opt/share/mur-php/conf.d
  cp xdebug.ini ${pkgdir}/opt/share/mur-php/conf.d/xdebug.ini
}
